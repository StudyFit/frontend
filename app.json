{
  "expo": {
    "name": "StudyFit",
    "slug": "StudyFit",
    "scheme": "StudyFit",
    "version": "1.0.0ㄴ",
    "orientation": "portrait",
    "icon": "./assets/logo_image.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo_image.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "사진을 업로드하기 위해 접근 권한이 필요합니다."
      },
      "bundleIdentifier": "com.farmers.studyfit"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo_image.png",
        "backgroundColor": "#ffffff",
        "package": "com.farmers.studyfit",
        "versionCode": 1
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.farmers.studyfit"
    },
    "web": {
      "favicon": "./assets/logo_image.png"
    },
    "plugins": ["expo-font", "expo-secure-store", "expo-asset"],

    "assetBundlePatterns": ["assets/fonts/*", "assets/images/*", "**/*"],

    "extra": {
      "eas": {
        "projectId": "0f747474-7d71-4587-a3f6-37117bce518d"
      }
    }
  }
}
